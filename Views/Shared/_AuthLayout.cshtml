<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HealthTrack</title>
    <link rel="icon" type="image/png" href="~/images/logo.png" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/auth.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/responsive.css" asp-append-version="true" />
</head>
<body class="auth-body">
    <div class="auth-split-container">
        @if (ViewContext.RouteData.Values["page"]?.ToString() == "/Account/Register")
        {
            <div class="auth-right-panel">
                <div class="auth-form-container">
                    @RenderBody()
                </div>
            </div>
            <div class="auth-left-panel">
                <div class="auth-left-content">
                    <h1><i class="bi bi-heart-pulse"></i> HealthTrack</h1>
                    <p>Gerencie seus exames médicos de forma simples, segura e inteligente</p>
                    <ul class="auth-features">
                        <li>
                            <i class="bi bi-shield-check"></i>
                            <span>Dados protegidos com segurança máxima</span>
                        </li>
                        <li>
                            <i class="bi bi-phone"></i>
                            <span>Acesse de qualquer dispositivo</span>
                        </li>
                        <li>
                            <i class="bi bi-graph-up"></i>
                            <span>Histórico completo dos seus exames</span>
                        </li>
                        <li>
                            <i class="bi bi-clock"></i>
                            <span>Disponível 24 horas por dia</span>
                        </li>
                    </ul>
                </div>
            </div>
        }
        else
        {
            <div class="auth-left-panel">
                <div class="auth-left-content">
                    <h1><i class="bi bi-heart-pulse"></i> HealthTrack</h1>
                    <p>Gerencie seus exames médicos de forma simples, segura e inteligente</p>
                    <ul class="auth-features">
                        <li>
                            <i class="bi bi-shield-check"></i>
                            <span>Dados protegidos com segurança máxima</span>
                        </li>
                        <li>
                            <i class="bi bi-phone"></i>
                            <span>Acesse de qualquer dispositivo</span>
                        </li>
                        <li>
                            <i class="bi bi-graph-up"></i>
                            <span>Histórico completo dos seus exames</span>
                        </li>
                        <li>
                            <i class="bi bi-clock"></i>
                            <span>Disponível 24 horas por dia</span>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="auth-right-panel">
                <div class="auth-form-container">
                    @RenderBody()
                </div>
            </div>
        }
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>