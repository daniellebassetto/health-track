@model ExamParameterViewModel
@{
    ViewData["Title"] = "Adicionar Parâmetro";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h4><i class="bi bi-plus-circle me-2"></i> Adicionar Parâmetro - @ViewBag.ExamName</h4>
            </div>
            <div class="card-body">
                <form method="post">
                    <input asp-for="ExamId" type="hidden" />
                    
                    <div class="mb-3">
                        <label asp-for="ParameterName" class="form-label">Nome do Parâmetro</label>
                        <input asp-for="ParameterName" class="form-control" 
                               placeholder="Ex: Glicemia, Colesterol Total, HDL, LDL...">
                        <span asp-validation-for="ParameterName" class="text-danger"></span>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label asp-for="NumericValue" class="form-label">Valor</label>
                                <input asp-for="NumericValue" class="form-control" 
                                       placeholder="Ex: 95, 180, Normal...">
                                <span asp-validation-for="NumericValue" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label asp-for="Unit" class="form-label">Unidade</label>
                                <input asp-for="Unit" class="form-control" 
                                       placeholder="Ex: mg/dL, g/L, %...">
                                <span asp-validation-for="Unit" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label asp-for="ReferenceRange" class="form-label">Referência</label>
                                <input asp-for="ReferenceRange" class="form-control" 
                                       placeholder="Ex: 70-100, <200...">
                                <span asp-validation-for="ReferenceRange" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-circle me-1"></i> Adicionar Parâmetro
                        </button>
                        <a asp-area="Patient" asp-controller="Exam" asp-action="Details" asp-route-id="@Model.ExamId" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left me-1"></i> Voltar
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>